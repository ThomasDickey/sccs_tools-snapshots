# $Id: makefile.in,v 6.1 1997/09/28 19:35:06 tom Exp $

THIS	= sccs_tools

@make_include_left@@TD_LIB_rules@/td_lib.mk@make_include_right@

####### (Standard Lists) #######################################################

prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
top_srcdir	= @top_srcdir@

B	= $(bindir)

IT	=\
	$B/fixsccs\
	$B/getdelta\
	$B/putdelta\
	$B/sccs2rcs\
	$B/sccsget\
	$B/sccsput

####### (Standard Productions) #################################################
all:
clean:				; -$(RM) $(CLEAN)
distclean:	clean		; -$(RM) $(ALL) [a-ln-z]*
run_test:
sources:
install:	$B $(IT)
deinstall:			; -$(RM) $(IT)

####### (Details of Productions) ###############################################
USER	= $(INSTALL) -m  755 $? $@
ADMIN	= $(INSTALL) -m 4755 $? $@

$B:				; $(top_srcdir)/mkdirs.sh $@
$B/fixsccs:	fixsccs		; $(USER)
$B/getdelta:	getdelta	; $(USER)
$B/putdelta:	putdelta	; $(USER)
$B/sccs2rcs:	sccs2rcs	; $(USER)
$B/sccsget:	sccsget		; $(USER)
$B/sccsput:	sccsput		; $(USER)
